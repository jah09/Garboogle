<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <com.example.practiceapp_elearning.RoundedImageView

        android:id="@+id/roundedImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/prof_txtViewFirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="177dp"
        android:text="Welcome"
        android:textColor="@color/black"

        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView" />

    <EditText
        android:id="@+id/editText_completeName"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/waste_custom_edit_text"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:enabled="false"
        android:hint="Complete name"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_txtViewFirstname" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/waste_custom_edit_text"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:enabled="false"
        android:hint="Email"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_completeName" />

    <EditText
        android:id="@+id/editText_contactnumber"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/waste_custom_edit_text"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="10dp"
        android:enabled="false"
        android:hint="Email"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_email" />


    <Button
        android:id="@+id/profileUpdateBtn"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/newcustom_button_waste"
        android:fontFamily="serif-monospace"
        android:text="Update"

        android:textAllCaps="false"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_contactnumber" />




</androidx.constraintlayout.widget.ConstraintLayout>